section.timer
    .timer-clock
        svg.timer-clock__svg(viewbox='0 0 100 100' xmlns='http://www.w3.org/2000/svg')
            g.timer-clock__circle
                circle.timer-clock__path-total(cx='50' cy='50' r='45')
                path.timer-clock__path-remaining(class='${remainingPathColor}' d='\
                M 50, 50\
                m -45, 0\
                a 45,45 0 1,0 90,0\
                a 45,45 0 1,0 -90,0\
                ')
        .timer-info
            p.timer-clock__status 
            p#timer-clock-label.timer-clock__label
                | 0:45
            p#timer-clock-remain.timer-clock__remain
                | time remain: 
                span 2:05
        div
            i.timer-icon.ph-gear-six
            i.timer-icon.ph-dots-three-outline
            button.btn.btn--pause(disabled='')
                | pause
            button.btn.btn--resume.hidden(disabled='')
                | resume
            button.btn.btn--reset(disabled='')
                | reset
            p.timer-infos.timer-info-exercise.hidden
                span 3/5
                |  exercises
            p.timer-infos.timer-info-set.hidden
                span 1/5
                |  sets
            p